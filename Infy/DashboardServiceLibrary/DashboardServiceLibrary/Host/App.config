<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="BSS.Automation.Dashboard.DashBoardImplementation" behaviorConfiguration="ServBehaviour">
        <endpoint address="" binding="wsHttpBinding" contract="BSS.Automation.Dashboard.IDashboardLibrary">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:10001/BSS/DashboardService"/>
          </baseAddresses>
        </host>        
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ServBehaviour">
          <serviceDebug includeExceptionDetailInFaults="true"/>
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>